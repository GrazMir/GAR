#! /bin/zsh

# This is a dmenu utils
setup(){
    chosen=$(printf "Manual\nAuto" | dmenu -i -p "Chose setup:") &&
    case "$chosen" in
        "Manual") echo "Manual" ;;
        "Auto") arandr ;;
    esac
}

screens=$(xrandr | awk '/ connected/ {print $1}')
chosen=$(printf "%s\\nSet Up" "$screens" | dmenu -i -p "Select Display:") &&
case "$chosen" in
    "eDP1") sh /home/graz/.screenlayout/main_display.sh;;
    "HDMI1") sh /home/graz/.screenlayout/dual_display.sh;;
    "Set Up") setup ;;
esac
